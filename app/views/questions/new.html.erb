<h1>Create New Question</h1>

<form action="/tests/<%= params[:test_id] %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-test-id">Test id:</label>
    <input type="number" name="question[test_id]" id="question-test-id" value="<%= params[:test_id] %>">
  </p><br>

  <p>
    <label for="question-body">Body:</label>
    <input type="text" name="question[body]" id="question-body">
  </p>

  <input type="submit" value="Create"> 
</form>
