<h1>Доступные Тесты</h1>

<p>
  <%= link_to 'Редактирование тестов', admin_tests_path %>
</p>

<div class="row">
  <table class="table">
    <tr>
      <th class="sort-by-title pointer col col-md-5">
        Название
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th class="col col-md-2">Уровень</th>
      <th class="col col-md-3">Кол-во вопросов</th>
      <th class="col col-md-2">Действия</th>
    </tr>

    <%= render @tests%>
  </table>
</div>
