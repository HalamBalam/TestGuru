<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Author:</strong>
  <%= @test.author.name %>
</p>

<p>
  <strong>Time:</strong>
  <%= time_format(@test.time * 60) %>
</p>

<p>
  <%= link_to 'New question', new_admin_test_question_path(@test) %>
</p>

<table>
  <tr>
    <th>Question</th>
    <th colspan="3">Actions</th>
  </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<%= link_to 'Edit', edit_admin_test_path(@test) %> |
<%= link_to 'Back', admin_tests_path %>
